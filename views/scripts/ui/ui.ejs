<script>
   document.addEventListener("DOMContentLoaded", () => {
     // Main view configuration
     const mainView = document.getElementById('mainView');
     mainView.style.backgroundColor = 'white';
     mainView.style.width = "100vw";
     mainView.style.minHeight = "100vh";
     console.log(`Main UI scripts loaded`);
     mainView.style.backgroundImage = "./images/assets/image7.jpg";
   
     // Mainbody and bodyElements configuration
     const bodyElements = document.getElementsByClassName('bodyElement');
     console.log(`bodyElements:`, bodyElements);
   
     const mainbody = document.getElementById('mainbody');
     mainbody.addEventListener('scroll', () => {
       Array.from(bodyElements).forEach((element) => {
         const rect = element.getBoundingClientRect();
const isVisible = rect.top < window.innerHeight && rect.bottom > 0; // Partially visible

if (isVisible) {
  const bgImage = element.getAttribute('data-bg');
  if (bgImage) {
    mainView.style.backgroundImage = bgImage;
    mainView.style.backgroundSize = 'cover';
    mainView.style.backgroundPosition = 'center';
    mainView.style.backgroundRepeat = 'no-repeat'

  }
}

       });
     });
   });
   </script>
   